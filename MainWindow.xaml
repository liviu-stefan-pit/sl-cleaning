<Window x:Class="SL_Cleaning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SL_Cleaning.ViewModels"
        xmlns:conv="clr-namespace:SL_Cleaning.Converters"
        mc:Ignorable="d"
        Title="SL Cleaning - Software Manager" 
        Height="720" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
        Style="{DynamicResource MainWindowStyle}">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <!-- Window Resources for Converters -->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:SourceFilterDisplayConverter x:Key="SourceFilterDisplayConverter"/>
        
        <!-- Override Window Style with Event Handlers -->
        <Style x:Key="MainWindowStyle" TargetType="Window">
            <Setter Property="WindowStyle" Value="None"/>
            <Setter Property="AllowsTransparency" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="ResizeMode" Value="CanResizeWithGrip"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Border Background="{StaticResource BackgroundDarkBrush}"
                                BorderBrush="{StaticResource BorderLightBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Custom Title Bar -->
                                <Border Grid.Row="0"
                                        Background="{StaticResource SurfaceBrush}"
                                        CornerRadius="8,8,0,0"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MouseDown="TitleBar_MouseDown">
                                    <Grid Margin="12,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- App Icon and Title -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- Custom Vector Icon -->
                                            <Viewbox Width="24" Height="24" Margin="0,0,12,0">
                                                <Canvas Width="24" Height="24">
                                                    <!-- Sparkle/Star Icon with Cleaning Theme -->
                                                    <Path Fill="{StaticResource AccentBrush}">
                                                        <Path.Data>
                                                            <PathGeometry>
                                                                <!-- Center star -->
                                                                <PathFigure StartPoint="12,2">
                                                                    <LineSegment Point="13.5,8"/>
                                                                    <LineSegment Point="19,9"/>
                                                                    <LineSegment Point="14.5,13"/>
                                                                    <LineSegment Point="15.5,19"/>
                                                                    <LineSegment Point="12,15"/>
                                                                    <LineSegment Point="8.5,19"/>
                                                                    <LineSegment Point="9.5,13"/>
                                                                    <LineSegment Point="5,9"/>
                                                                    <LineSegment Point="10.5,8"/>
                                                                </PathFigure>
                                                                <!-- Small accent stars -->
                                                                <PathFigure StartPoint="20,4">
                                                                    <LineSegment Point="20.5,5.5"/>
                                                                    <LineSegment Point="22,6"/>
                                                                    <LineSegment Point="20.5,6.5"/>
                                                                    <LineSegment Point="20,8"/>
                                                                    <LineSegment Point="19.5,6.5"/>
                                                                    <LineSegment Point="18,6"/>
                                                                    <LineSegment Point="19.5,5.5"/>
                                                                </PathFigure>
                                                                <PathFigure StartPoint="4,16">
                                                                    <LineSegment Point="4.5,17.5"/>
                                                                    <LineSegment Point="6,18"/>
                                                                    <LineSegment Point="4.5,18.5"/>
                                                                    <LineSegment Point="4,20"/>
                                                                    <LineSegment Point="3.5,18.5"/>
                                                                    <LineSegment Point="2,18"/>
                                                                    <LineSegment Point="3.5,17.5"/>
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </Path.Data>
                                                    </Path>
                                                    <!-- Cleaning brush accent -->
                                                    <Path Stroke="{StaticResource AccentMutedBrush}" StrokeThickness="1.5">
                                                        <Path.Data>
                                                            <PathGeometry>
                                                                <PathFigure StartPoint="16,15">
                                                                    <LineSegment Point="21,20"/>
                                                                </PathFigure>
                                                            </PathGeometry>
                                                        </Path.Data>
                                                    </Path>
                                                </Canvas>
                                            </Viewbox>

                                            <TextBlock Text="SL Cleaning"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Window Controls -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Content="─"
                                                    Style="{StaticResource TitleBarButtonStyle}"
                                                    Click="MinimizeButton_Click"
                                                    ToolTip="Minimize"/>
                                            <Button Content="☐"
                                                    Style="{StaticResource TitleBarButtonStyle}"
                                                    Click="MaximizeButton_Click"
                                                    ToolTip="Maximize"/>
                                            <Button Content="✕"
                                                    Style="{StaticResource TitleBarCloseButtonStyle}"
                                                    Click="CloseButton_Click"
                                                    ToolTip="Close"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Window Content -->
                                <AdornerDecorator Grid.Row="1">
                                    <ContentPresenter/>
                                </AdornerDecorator>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradientBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- SEARCH / FILTER BAR -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceLightBrush}" 
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="400"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBox x:Name="SearchBox"
                             Style="{StaticResource SearchTextBoxStyle}"
                             Text="{Binding SearchText}"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="🔍 Search software..."
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"
                               Margin="14,0,0,0"
                               IsHitTestVisible="False"
                               FontSize="{StaticResource FontSizeNormal}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="20,0">
                    <!-- Source Filter Dropdown -->
                    <ComboBox ItemsSource="{Binding SourceFilterOptions}"
                              SelectedItem="{Binding SelectedSourceFilter}"
                              Style="{StaticResource StarryComboBoxStyle}"
                              Width="160"
                              Margin="0,0,16,0"
                              ToolTip="Filter by software source">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource SourceFilterDisplayConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <Button Content="Select All"
                            Style="{StaticResource BaseButtonStyle}"
                            Command="{Binding SelectAllCommand}"
                            Padding="12,8"/>
                    <Button Content="Select None"
                            Style="{StaticResource BaseButtonStyle}"
                            Command="{Binding SelectNoneCommand}"
                            Padding="12,8"
                            Margin="8,0,0,0"/>
                </StackPanel>

                <Grid Grid.Column="2"/>

                <Button Grid.Column="3"
                        Content="⟳ Refresh Scan"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding RefreshCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        Padding="16,8"/>
            </Grid>
        </Border>

        <!-- MAIN DATA GRID -->
        <Border Grid.Row="1" 
                Margin="20,16"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="6"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">
            <Grid>
                <Border Background="{StaticResource SurfaceBrush}"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                        Panel.ZIndex="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="⏳" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="{StaticResource FontSizeMedium}"
                                   HorizontalAlignment="Center"/>
                        <ProgressBar Style="{StaticResource StarryProgressBarStyle}"
                                     IsIndeterminate="True"
                                     Width="200"
                                     Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>

                <DataGrid x:Name="SoftwareGrid"
                          Style="{StaticResource StarryDataGridStyle}"
                          ItemsSource="{Binding SoftwareView}"
                          ColumnHeaderStyle="{StaticResource StarryDataGridColumnHeaderStyle}"
                          CellStyle="{StaticResource StarryDataGridCellStyle}"
                          RowStyle="{StaticResource StarryDataGridRowStyle}"
                          Visibility="{Binding IsNotBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="50" CanUserResize="False">
                            <DataGridTemplateColumn.Header>
                                <CheckBox Style="{StaticResource StarryCheckBoxStyle}"
                                          IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                                          ToolTip="Select/Deselect All"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Style="{StaticResource StarryCheckBoxStyle}"
                                              IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                              IsEnabled="{Binding Uninstallable}"
                                              HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Icon Column -->
                        <DataGridTemplateColumn Width="Auto"
                                                MinWidth="{StaticResource IconCellMinWidth}"
                                                CanUserResize="False">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="📦" ToolTip="Program Icon" HorizontalAlignment="Center"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource StarryDataGridCellStyle}">
                                    <Setter Property="Padding" Value="{StaticResource IconCellPadding}"/>
                                </Style>
                            </DataGridTemplateColumn.CellStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Border CornerRadius="{StaticResource IconCornerRadius}"
                                                Background="Transparent">
                                            <Viewbox Stretch="Uniform"
                                                     MaxWidth="{StaticResource IconVisualMaxDimension}"
                                                     MaxHeight="{StaticResource IconVisualMaxDimension}">
                                                <Image Source="{Binding IconSource}"
                                                       Stretch="Uniform"
                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                       SnapsToDevicePixels="True"/>
                                            </Viewbox>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="NAME" 
                                            Binding="{Binding DisplayName}" 
                                            Width="*"
                                            MinWidth="200"
                                            IsReadOnly="True"/>

                        <DataGridTextColumn Header="UNINSTALLABLE"
                                            Binding="{Binding Uninstallable}"
                                            Width="110"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Uninstallable}" Value="True">
                                            <Setter Property="Text" Value="✓ Yes"/>
                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Uninstallable}" Value="False">
                                            <Setter Property="Text" Value="✗ No"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="PUBLISHER" 
                                            Binding="{Binding Publisher}" 
                                            Width="180"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="VERSION" 
                                            Binding="{Binding DisplayVersion}" 
                                            Width="100"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="INSTALLED" 
                                            Binding="{Binding InstallDateFormatted}" 
                                            Width="100"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="SIZE" 
                                            Binding="{Binding SizeFormatted}" 
                                            Width="80"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- BOTTOM ACTION BAR -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}" 
                Padding="20,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="{StaticResource FontSizeNormal}"
                               VerticalAlignment="Center">
                        <Run Text="Shown: "/>
                        <Run Text="{Binding ShownCount, Mode=OneWay}" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="  |  Selected: "/>
                        <Run Text="{Binding SelectedCount, Mode=OneWay}" Foreground="{StaticResource AccentBrush}"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Button Content="⚠ Disclaimer" 
                            Style="{StaticResource BaseButtonStyle}"
                            Command="{Binding ShowDisclaimerCommand}"
                            ToolTip="View important disclaimer"
                            Padding="12,8"
                            FontSize="13"
                            Margin="0,0,12,0"/>
                    
                    <Button Content="Cancel"
                            Style="{StaticResource BaseButtonStyle}"
                            Command="{Binding CancelUninstallCommand}"
                            Visibility="{Binding IsUninstalling, Converter={StaticResource BoolToVisibilityConverter}}"
                            Padding="16,10"
                            Margin="0,0,12,0"/>

                    <Button Content="🗑 Uninstall Selected"
                            Style="{StaticResource DangerButtonStyle}"
                            Command="{Binding UninstallSelectedCommand}"
                            IsEnabled="{Binding CanUninstall}"
                            Padding="20,10"
                            FontSize="{StaticResource FontSizeMedium}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONFIRMATION / PROGRESS OVERLAY -->
        <Border Grid.RowSpan="3"
                Background="#CC0D1421"
                Visibility="{Binding IsOverlayVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="100"
                MouseDown="Overlay_MouseDown">
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="32"
                    MaxWidth="500"
                    MaxHeight="450"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    MouseDown="OverlayContent_MouseDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="{Binding OverlayTitle}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="{StaticResource FontSizeLarge}"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <!-- Scrollable message area -->
                        <ScrollViewer MaxHeight="300" 
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <TextBlock Text="{Binding OverlayMessage}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="{StaticResource FontSizeNormal}"
                                       FontFamily="Consolas, Courier New"
                                       TextWrapping="Wrap"
                                       Padding="0,0,10,0"/>
                        </ScrollViewer>

                        <StackPanel Visibility="{Binding IsUninstalling, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Margin="0,20,0,0">
                            <TextBlock Text="{Binding CurrentUninstallItem}"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontSize="{StaticResource FontSizeNormal}"
                                       Margin="0,0,0,8"/>
                            <ProgressBar Style="{StaticResource StarryProgressBarStyle}"
                                         Value="{Binding UninstallProgress}"
                                         Maximum="100"
                                         Height="8"/>
                            <TextBlock Text="{Binding UninstallProgressText}"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="{StaticResource FontSizeSmall}"
                                       HorizontalAlignment="Right"
                                       Margin="0,6,0,0"/>
                        </StackPanel>

                        <Expander Header="View Log"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  Visibility="{Binding HasUninstallLog, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Margin="0,16,0,0">
                            <ScrollViewer MaxHeight="150" 
                                          VerticalScrollBarVisibility="Auto"
                                          Margin="0,8,0,0">
                                <TextBlock Text="{Binding UninstallLog}"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="{StaticResource FontSizeSmall}"
                                           FontFamily="Consolas"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Expander>
                    </StackPanel>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <!-- Confirmation Mode Buttons -->
                        <Button Content="Cancel"
                                Style="{StaticResource BaseButtonStyle}"
                                Command="{Binding CloseOverlayCommand}"
                                Visibility="{Binding IsConfirmationMode, Converter={StaticResource BoolToVisibilityConverter}}"
                                Padding="16,10"
                                Margin="0,0,12,0"/>
                        <Button Content="Confirm Uninstall"
                                Style="{StaticResource DangerButtonStyle}"
                                Command="{Binding ConfirmUninstallCommand}"
                                Visibility="{Binding IsConfirmationMode, Converter={StaticResource BoolToVisibilityConverter}}"
                                Padding="16,10"/>

                        <!-- Result Mode Buttons -->
                        <Button Content="Export Log"
                                Style="{StaticResource BaseButtonStyle}"
                                Command="{Binding ExportLogCommand}"
                                Visibility="{Binding IsResultMode, Converter={StaticResource BoolToVisibilityConverter}}"
                                Padding="16,10"
                                Margin="0,0,12,0"/>
                        <Button Content="Close"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding CloseOverlayCommand}"
                                Visibility="{Binding IsResultMode, Converter={StaticResource BoolToVisibilityConverter}}"
                                Padding="16,10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- DISCLAIMER OVERLAY (Separate) -->
        <Border Grid.RowSpan="3"
                Background="#CC0D1421"
                Visibility="{Binding IsDisclaimerMode, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="100"
                MouseDown="DisclaimerOverlay_MouseDown">
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="32"
                    MaxWidth="600"
                    MaxHeight="500"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    MouseDown="OverlayContent_MouseDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="{Binding OverlayTitle}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="{StaticResource FontSizeLarge}"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <ScrollViewer Grid.Row="1" 
                                  MaxHeight="350" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Margin="0,0,0,20">
                        <TextBlock Text="{Binding OverlayMessage}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="{StaticResource FontSizeNormal}"
                                   TextWrapping="Wrap"
                                   LineHeight="22"
                                   Padding="0,0,10,0"/>
                    </ScrollViewer>

                    <Button Grid.Row="2"
                            Content="OK, I Understand"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding CloseOverlayCommand}"
                            HorizontalAlignment="Center"
                            Padding="32,10"
                            MinWidth="160"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
